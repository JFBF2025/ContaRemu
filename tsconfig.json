{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "declaration": false,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": { "*": ["src/*"] },
    "types": ["node"]
  },
  "include": ["src/**/*", "ormconfig.ts"],
  "exclude": ["node_modules", "dist"]
}
